{
  "manifest_version": 2,

  "name": "Readsy",
  "description": "Bring embedded speed reading to any website by double clicking the text",
  "version": "1.0.0",
  "homepage_url": "http://readsy.net",
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "contextMenus"
  ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "content_scripts": [
                      {
                      "matches": 
                      [	"<all_urls>"],
                      "css": 
                      [	"readsy.css"],
                      "js": 
                      [	"readsy_app.js",
					  	"readsy.js"]
                      }
					  ]
}
